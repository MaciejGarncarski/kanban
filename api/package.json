{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --runInBand",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --detectOpenHandles --runInBand --config ./jest-e2e.json",
    "test:all": "pnpm test && pnpm test:e2e",
    "db:reset": "pnpm tsx --env-file=.env ./src/infrastructure/persistence/db/reset.ts",
    "db:seed": "pnpm tsx --env-file=.env ./src/infrastructure/persistence/db/seed.ts",
    "db:migrate": "pnpm tsx --env-file=.env ./src/infrastructure/persistence/db/migrate.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/throttler": "^6.4.0",
    "@node-rs/argon2": "^2.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "drizzle-seed": "^0.3.1",
    "nestjs-cls": "^6.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^11.1.0",
    "zod": "catalog:",
    "nanoid": "catalog:"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.9.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@testcontainers/postgresql": "^11.7.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.31.5",
    "eslint": "catalog:",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "catalog:",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "catalog:",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "testTimeout": 30000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/*.module.(t|j)s",
      "!**/*.dto.(t|j)s",
      "!**/*.command.(t|j)s",
      "!**/*.query.(t|j)s",
      "!**/*.decorator.(t|j)s",
      "!**/*.config.(t|j)s",
      "!**/*.schema.(t|j)s",
      "!**/*.controller.(t|j)s",
      "!**/*.routes.(t|j)s",
      "!**/*.entity.(t|j)s",
      "!db/**/*",
      "!**/infrastructure/persistence/db/**",
      "!main.(t|j)s",
      "!**/__tests__/**"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "testEnvironment": "node"
  }
}
